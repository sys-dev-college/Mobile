<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/li_task_detail_item_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/task_background"
        android:importantForAccessibility="no"
        android:paddingHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="@id/li_task_detail_item_text"
        app:layout_constraintTop_toTopOf="@id/li_task_detail_item_text" />

    <TextView
        android:id="@+id/li_task_detail_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintEnd_toStartOf="@id/li_task_detail_item_text_amount"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/task_detail_item_checkbox"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="eqweqasdasdasdasdasdasdasdasdwe" />

    <TextView
        android:id="@+id/li_task_detail_item_text_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/li_task_detail_item_text"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="qweqweasdasdasdasdasdqwe" />

    <CheckBox
        android:id="@+id/task_detail_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        app:layout_constraintBottom_toBottomOf="@id/li_task_detail_item_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/li_task_detail_item_text"

        />
</androidx.constraintlayout.widget.ConstraintLayout>