<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/li_check_trainer_calendar_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/task_background"
        android:importantForAccessibility="no"
        android:paddingHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="@id/li_check_trainer_calendar_text"
        app:layout_constraintTop_toTopOf="@id/li_check_trainer_calendar_text" />

    <TextView
        android:id="@+id/li_check_trainer_calendar_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingVertical="8dp"
        android:layout_marginStart="20dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="@id/li_check_trainer_calendar_background"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="eqweqasdasdasda" />



</androidx.constraintlayout.widget.ConstraintLayout>